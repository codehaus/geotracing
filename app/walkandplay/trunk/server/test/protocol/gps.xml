<testset id="gps" clients="1">

	<test id="reset-team">
		<send id="client1">
			<login-req name="wp-guest" password="guest" portalname="walkandplay" protocolVersion="4.0"/>
			<select-app-req appname="wp" rolename="guest"/>
			<enter-space-req spacename="wp-space"/>
			<join-amulet-req id="wp-amulet" protocolversion="2.0">
				<options type="gamephone" name="+31654268627"/>
			</join-amulet-req>
			<amulet id="mobgame">
				<team-reset-req teamname="blue" />
			</amulet>
			<leave-amulet-req id="mobgame"/>
			<exit-space-req/>
			<logout-req/>
		</send>

		<expect id="client1">
			<login-rsp/>
			<select-app-rsp/>
			<enter-space-rsp/>
			<join-amulet-rsp/>
			<amulet id="mobgame">
				<team-reset-rsp teamname="blue" />
			</amulet>
			<leave-amulet-rsp id="mobgame"/>
			<exit-space-rsp/>
			<logout-rsp/>
		</expect>
	</test>

     <test id="join">
		<send id="client1">
			<login-req name="wp-guest" password="guest" portalname="walkandplay" protocolVersion="4.0"/>
			<select-app-req appname="wp" rolename="guest"/>
			<enter-space-req spacename="wp-space"/>
			<join-amulet-req id="wp-amulet" protocolversion="2.0">
				<options type="gamephone" name="+31654268627"/>
			</join-amulet-req>
		</send>

		<expect id="client1">
			<login-rsp/>
			<select-app-rsp/>
			<enter-space-rsp/>
			<join-amulet-rsp/>
		</expect>
	</test>

  	<test id="gps-status-ind">
		<send id="client1">
			<amulet id="mobgame">
				<gps-status-ind gps="up"/>
			</amulet>
			<amulet id="mobgame">
				<gps-status-ind gps="down"/>
			</amulet>
		</send>

		<expect id="client1">
			<amulet id="mobgame">
				<team-status-ind event="gps">
					<team teamname="blue" gps="up"/>
				</team-status-ind>
			</amulet>
			<amulet id="mobgame">
				<team-status-ind event="gps">
					<team teamname="blue" gps="down"/>
				</team-status-ind>
			</amulet>
		</expect>
	</test>

	<test id="team-action-status-ind">
		<send id="client1">
			<amulet id="mobgame">
				<gps-data-ind data="$GPRMC,095817.453,A,5222.3561,N,00454.0298,E,0.13,44.25,030804,,*39"/>
			</amulet>
		</send>

		<expect id="client1">
			<amulet id="mobgame">
				<team-status-ind event="location" >
					<team teamname="blue" >
						<location lat="" lon="" zonename="" rx="" ry="" mx="" my="" />
					</team>
				</team-status-ind>
			</amulet>
		</expect>

		<expect id="client1">
			<amulet id="mobgame">
				<team-action-ind action="zoneenter" id="zone1"/>
			</amulet>
		</expect>

		<expect id="client1">
			<amulet id="mobgame">
				<team-status-ind event="zone" >
					<team teamname="blue" zonename="zone1" />
				</team-status-ind>
			</amulet>
		</expect>
	</test>

	<test id="leave-exit-logout">
		<send id="client1">
			<leave-amulet-req id="mobgame"/>
			<exit-space-req/>
			<logout-req/>
		</send>

		<expect id="client1">
			<leave-amulet-rsp id="mobgame"/>
			<exit-space-rsp/>
			<logout-rsp/>
		</expect>
	</test>

</testset>

