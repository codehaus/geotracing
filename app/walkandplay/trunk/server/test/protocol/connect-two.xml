<testset id="connect-two" clients="2">


	<test id="join-blue">

		<send id="client1">
			<login-req name="wp-guest" password="guest" portalname="walkandplay" protocolVersion="4.0"/>
			<select-app-req appname="wp" rolename="guest"/>
			<enter-space-req spacename="wp-space"/>
			<join-amulet-req id="wp-amulet" protocolversion="2.0">
				<options type="gamephone" name="+31613362231"/>
			</join-amulet-req>
		</send>

		<expect id="client1">
			<login-rsp/>
			<select-app-rsp/>
			<enter-space-rsp/>
			<join-amulet-rsp/>
		</expect>

	</test>
	<test id="join-green">
		<send id="client2">
			<login-req name="wp-guest" password="guest" portalname="walkandplay" protocolVersion="4.0"/>
			<select-app-req appname="wp" rolename="guest"/>
			<enter-space-req spacename="wp-space"/>
			<join-amulet-req id="wp-amulet" protocolversion="2.0">
				<options type="gamephone" name="hq-green"/>
			</join-amulet-req>
		</send>

		<expect id="client2">
			<login-rsp/>
			<select-app-rsp/>
			<enter-space-rsp/>
			<join-amulet-rsp/>
		</expect>

		<expect id="client1">
			<enter-space-ind/>
			<join-amulet-ind/>
		</expect>
	</test>

	<test id="exit-green">

		<send id="client2">
			<exit-space-req/>
			<logout-req/>
		</send>
		<expect id="client2">
			<exit-space-rsp/>
			<logout-rsp/>
		</expect>

		<expect id="client1">
			<leave-amulet-ind/>
			<exit-space-ind/>
		</expect>
	</test>


	<test id="exit-blue">
		<send id="client1">
			<exit-space-req/>
			<logout-req/>
		</send>

		<expect id="client1">
			<exit-space-rsp/>
			<logout-rsp/>
		</expect>

	</test>

</testset>

