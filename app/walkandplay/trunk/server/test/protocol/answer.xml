<testset id="answer" clients="1">

	<test id="login-select-app-enter-join">
		<send id="client1">
			<login-req name="wp-guest" password="guest" portalname="walkandplay" protocolVersion="4.0"/>
			<select-app-req appname="wp" rolename="guest"/>
			<enter-space-req spacename="wp-space"/>
			<join-amulet-req id="wp-amulet" protocolversion="2.0">
				<options type="hq" name="hq-green"/>
			</join-amulet-req>
		</send>

		<expect id="client1">
			<login-rsp/>
			<select-app-rsp/>
			<enter-space-rsp/>
			<join-amulet-rsp/>
		</expect>
	</test>


	<test id="answer-submit-ok">
		<send id="client1">
			<amulet id="mobgame">
				<answer-submit-req assignmentid="166" text="malle jan"/>
			</amulet>
		</send>

		<expect id="client1">
			<amulet id="mobgame">
				<answer-submit-rsp assignmentid="166" text="malle jan" correct="true"/>
			</amulet>
		</expect>

	</test>
    	<test id="answer-submit-notok">
		<send id="client1">
			<amulet id="mobgame">
				<answer-submit-req assignmentid="166" text="bad answer"/>
			</amulet>
		</send>

		<expect id="client1">
			<amulet id="mobgame">
				<answer-submit-rsp assignmentid="166" text="bad answer" correct="false"/>
			</amulet>
		</expect>

	</test>
</testset>

