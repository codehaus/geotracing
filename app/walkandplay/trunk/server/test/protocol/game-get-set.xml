<testset id="game-get-set" clients="1">

	<test id="login-select-app">
		<send id="client1">
			<login-req name="wp-guest" password="guest" portalname="walkandplay" protocolVersion="4.0"/>
			<select-app-req appname="wp" rolename="guest"/>
		</send>

		<expect id="client1">
			<login-rsp/>
			<select-app-rsp/>
		</expect>
	</test>

    <test id="enter">
		<send id="client1">
			<enter-space-req spacename="wp-space"/>
		</send>

		<expect id="client1">
			<enter-space-rsp/>
		</expect>
	</test>

    <test id="join">
		<send id="client1">
			<join-amulet-req id="wp-amulet" protocolversion="2.0">
				<options type="gamephone" name="+31613362231"/>
			</join-amulet-req>
		</send>

		<expect id="client1">
			<join-amulet-rsp/>
		</expect>
	</test>


    <test id="game-get-all">
		<send id="client1">
			<amulet id="mobgame">
				<game-get-req/>
			</amulet>
		</send>

		<expect id="client1">
			<amulet id="mobgame">
				<game-get-rsp>
					<game name="" state=""/>
				</game-get-rsp>
			</amulet>
		</expect>
	</test>

	<test id="game-setstate-paused">
		<send id="client1">
			<amulet id="mobgame">
				<game-setstate-req state="paused"/>
			</amulet>
			<amulet id="mobgame">
				<game-get-req/>
			</amulet>
			<amulet id="mobgame">
				<boobytrap-place-req/>
			</amulet>
			<amulet id="mobgame">
				<game-setstate-req state="active"/>
			</amulet>
		</send>

		<expect id="client1">
			<amulet id="mobgame">
				<game-setstate-rsp state="paused"/>
			</amulet>
			<amulet id="mobgame">
				<game-get-rsp>
					<game name="" state="paused"/>
				</game-get-rsp>
			</amulet>
			<amulet id="mobgame">
				<boobytrap-place-nrsp/>
			</amulet>
			<amulet id="mobgame">
				<game-setstate-rsp state="active"/>
			</amulet>
		</expect>
	</test>

	<test id="game-setstate-ended">
		<send id="client1">
			<amulet id="mobgame">
				<game-setstate-req state="stopped"/>
			</amulet>
			<amulet id="mobgame">
				<game-get-req/>
			</amulet>
			<amulet id="mobgame">
				<game-setstate-req state="active"/>
			</amulet>
		</send>

		<expect id="client1">
			<amulet id="mobgame">
				<game-setstate-rsp state="stopped"/>
			</amulet>
			<amulet id="mobgame">
				<game-get-rsp>
					<game name="" state="stopped"/>
				</game-get-rsp>
			</amulet>
			<amulet id="mobgame">
				<game-setstate-rsp state="active"/>
			</amulet>
		</expect>
	</test>

	<test id="game-reset">
		<send id="client1">
			<amulet id="mobgame">
				<game-reset-req name="admin"/>
			</amulet>
		</send>

		<expect id="client1">
			<amulet id="mobgame">
				<game-reset-rsp/>
			</amulet>
		</expect>
	</test>
</testset>

