<?xml version="1.0" encoding="iso-8859-1"?>

<!-- Player table definition -->
<table>

	<views>

		<insert>
			<field name="invitation"/>
            <field name="startdate"/>
			<field name="enddate"/>
            <field name="players" />
        </insert>

		<list>
			<field name="id"/>
			<field name="invitation"/>
			<field name="startdate"/>
            <field name="enddate"/>
            <field name="players" />
        </list>

		<query>
			<field name="id"/>
			<field name="invitation"/>
            <field name="startdate"/>
			<field name="enddate"/>
            <field name="players" />
        </query>
	</views>

	<!--{data -->
	<data>
		<field name="id" type="INTEGER" required="true" key="true"/>
		<field name="owner" type="STRING" size="12" required="true" default="unknown"/>
		<field name="invitation" type="TEXT" required="false" />
		<field name="startdate" type="TIMESTAMP"/>
		<field name="enddate" type="TIMESTAMP"/>
        <field name="creationdate" type="TIMESTAMP"/>
        <field name="modificationdate" type="TIMESTAMP"/>
        <field name="players" type="XML" />
        <field name="extra" type="XML" />
	</data>
	<!--}data -->

</table>
