<?xml version="1.0" encoding="iso-8859-1"?>

<!-- team table definition -->
<table>

    <views>

		<insert>
			<field name="name" />
 		</insert>

		<list>
			<field name="id" />
			<field name="name" />
			<field name="state" />
 			<field name="score" />
    	</list>

		<query>
			<field name="id" />
			<field name="owner" />
			<field name="name" />
            <field name="state" />
			<field name="results" />
 		</query>
 	</views>

	<!--{data -->
	<data>
		<field name="id" type="INTEGER" required="true" key="true" />
		<field name="owner" type="STRING" size="12" required="true" default="unknown" />

		<!-- Unique name as color: blue,red,green,orange,yellow,black -->
		<field name="name" type="STRING" size="10" required="true" />

		<!-- Unique name as color: blue,red,green,orange,yellow,black -->
		<field name="state" type="STRING" size="10" required="true" default="enabled" />

		<!-- Location: where it resides -->
		<field name="location" type="XML" required="false"/>

		<!-- Total score  -->
		<field name="score" type="XML"  />

		<!-- Current game action status of team -->
        <field name="actions" type="XML" />

		<!-- Current zones status of team -->
        <field name="zones" type="XML" />

		<!-- Current result status of team -->
        <field name="results" type="XML" />

		<!-- Reserved -->
		<field name="extra" type="XML" />
	</data>
	<!--}data -->

</table>
