<?xml version="1.0" encoding="iso-8859-1"?>

<!-- Player table definition -->
<table>

	<views>

		<insert>
			<field name="type"/>
			<field name="name"/>
		</insert>

		<list>
			<field name="id"/>
			<field name="type"/>
			<field name="name"/>
			<field name="lastalive"/>
		</list>

		<query>
			<field name="id"/>
			<field name="type"/>
			<field name="name"/>
			<field name="lastalive"/>
		</query>
	</views>

	<!--{data -->
	<data>
		<field name="id" type="INTEGER" required="true" key="true"/>
		<field name="owner" type="STRING" size="12" required="true" default="unknown"/>

		<!-- Unique name e.g. full international number e.g. +31654268627 -->
		<field name="name" type="STRING" size="24" required="true"/>

		<!-- Type, values: hq, gamephone, videophone -->
		<field name="type" type="STRING" size="64" required="true"/>

		<!-- When was this player last seen ? -->
		<field name="lastalive" type="TIMESTAMP"/>

		<field name="extra" type="XML" />
	</data>
	<!--}data -->

</table>
