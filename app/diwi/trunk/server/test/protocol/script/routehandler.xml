<testset id="routehandler" clients="1">

	 <!-- Standard KWX login sequence -->
	<test id="login-selapp">

		<send id="client1">
			<login-req name="geoapp-user" password="user" protocolversion="4.0"/>
			<select-app-req appname="geoapp" rolename="user"/>
		</send>

		<expect id="client1">

			<login-rsp/>

			<select-app-rsp/>
		</expect>
	</test>

	<!-- scenario 1 -->
	<test id="route-create-1">
		<send id="client1">
			<utopia-req>
				<route-generate-req>
		             <pref name="bos" value="40" type="outdoor-params" />
		             <pref name="heide" value="20" type="outdoor-params" />
		             <pref name="bebouwing" value="10" type="outdoor-params" />
		             <pref name="theme" value="forts" type="theme" />
		             <pref name="activity" value="wandelaar" type="activity" />
				</route-generate-req>
			</utopia-req>
		</send>

		<expect id="client1">
			<utopia-rsp>
				<route-generate-rsp/>
			</utopia-rsp>
		</expect>
	</test>


	<!-- scenario 2a -->
	<test id="route-">
		<send id="client1">
			<utopia-req>
				<route-generate-req>
		             <pref name="bos" value="40" type="outdoor-params" />
		             <pref name="heide" value="20" type="outdoor-params" />
		             <pref name="bebouwing" value="10" type="outdoor-params" />
		             <pref name="theme" value="forts" type="theme" />
		             <pref name="activity" value="wandelaar" type="activity" />
				</route-generate-req>
			</utopia-req>
			<utopia-req>
				<route-show-details route-id="1"/>
			</utopia-req>
			<utopia-req>
				<route-save route-id="1"/>
			</utopia-req>
		</send>

		<expect id="client1">
			<utopia-rsp>
				<route-generate-rsp/>
			</utopia-rsp>
			<utopia-rsp>
				<route-generate-rsp/>
			</utopia-rsp>
			<utopia-rsp>
				<route-generate-rsp/>
			</utopia-rsp>
		</expect>
	</test>


	<test id="logout">
		<send id="client1">
			<logout-req/>
		</send>

		<expect id="client1">
			<logout-rsp/>
		</expect>
	</test>

</testset>

