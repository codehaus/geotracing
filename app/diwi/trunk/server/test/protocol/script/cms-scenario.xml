<testset id="cms-scenario" clients="1">

    <!-- Standard KWX login sequence -->
    <test id="login-selapp">

        <send id="client1">
            <login-req name="geoapp-user" password="user" protocolversion="4.0"/>
            <select-app-req appname="geoapp" rolename="user"/>
        </send>

        <expect id="client1">

            <login-rsp/>

            <select-app-rsp/>
        </expect>
    </test>

    <!--
       ok so here's the CMS scenario:
       - retrieve media
       - show medium (http, so not in test here)
       - get poi list
       - get poi
       - create poi
       - update poi
       - remove poi       
    -->

    <test id="kich-get-media-req">
        <send id="client1">
            <utopia-req>
                <kich-get-media-req/>
            </utopia-req>
        </send>

        <expect id="client1">
            <utopia-rsp>
                <kich-get-media-rsp/>
            </utopia-rsp>
        </expect>
    </test>

    <test id="poi-getlist-req">
        <send id="client1">
            <utopia-req>
                <poi-getlist-req/>
            </utopia-req>
        </send>

        <expect id="client1">
            <utopia-rsp>
                <poi-getlist-rsp/>
            </utopia-rsp>
        </expect>
    </test>

    <test id="poi-insert-req">
        <send id="client1">
            <utopia-req>
                <poi-insert-req>
                    <poi>
                        <name>poi nummer 1</name>
                        <description>prachtig punt</description>
                        <category>fort</category>
                        <x>161031.999531</x>
                        <y>453601.0</y>
                    </poi>
                </poi-insert-req>
            </utopia-req>
        </send>

        <expect id="client1">
            <utopia-rsp>
                <poi-insert-rsp id="${poiid}"/>
            </utopia-rsp>
        </expect>
    </test>

    <test id="poi-relate-media-req">
        <send id="client1">
            <utopia-req>
                <poi-relate-media-req id="673">
                    <medium>1.jpg</medium>
                    <medium>2.jpg</medium>
                    <medium>3.jpg</medium>
                </poi-relate-media-req>
            </utopia-req>
        </send>

        <expect id="client1">
            <utopia-rsp>
                <poi-relate-media-rsp/>
            </utopia-rsp>
        </expect>
    </test>

    <test id="poi-unrelate-media-req">
        <send id="client1">
            <utopia-req>
                <poi-unrelate-media-req id="673">
                    <medium>2.jpg</medium>
                    <medium>3.jpg</medium>
                </poi-unrelate-media-req>
            </utopia-req>
        </send>

        <expect id="client1">
            <utopia-rsp>
                <poi-unrelate-media-rsp/>
            </utopia-rsp>
        </expect>
    </test>

    <test id="poi-get-req">
        <send id="client1">
            <utopia-req>
                <poi-get-req id="673"/>
            </utopia-req>
        </send>

        <expect id="client1">
            <utopia-rsp>
                <poi-get-rsp/>
            </utopia-rsp>
        </expect>
    </test>


    <test id="poi-update-req">
        <send id="client1">
            <utopia-req>
                <poi-update-req id="673">
                    <poi>
                        <name>poi nummer 100</name>
                        <description>mooi punt</description>
                        <category>fort</category>
                        <x>161031.999531</x>
                        <y>453601.0</y>
                    </poi>
                </poi-update-req>
            </utopia-req>
        </send>

        <expect id="client1">
            <utopia-rsp>
                <poi-update-rsp/>
            </utopia-rsp>
        </expect>
    </test>

    <test id="poi-delete-req">
        <send id="client1">
            <utopia-req>
                <poi-delete-req id="673"/>
            </utopia-req>
        </send>

        <expect id="client1">
            <utopia-rsp>
                <poi-delete-rsp/>
            </utopia-rsp>
        </expect>
    </test>

    <test id="logout">
        <send id="client1">
            <logout-req/>
        </send>

        <expect id="client1">
            <logout-rsp/>
        </expect>
    </test>

</testset>

