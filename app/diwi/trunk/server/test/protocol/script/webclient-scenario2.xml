<testset id="webclient-scenario" clients="1">

    <!-- Standard KWX login sequence -->
    <test id="login-selapp">

        <send id="client1">
            <login-req name="geoapp-user" password="user" protocolversion="4.0"/>
            <select-app-req appname="geoapp" rolename="user"/>
        </send>

        <expect id="client1">

            <login-rsp/>

            <select-app-rsp/>
        </expect>
    </test>

    <!--
     1. retrieve trips
     2. retrieve trip
     2. create comment
    -->

    <test id="trip-getlist-req">
        <send id="client1">
            <utopia-req>
                <trip-getlist-req/>
            </utopia-req>
        </send>

        <expect id="client1">
            <utopia-rsp>
                <trip-getlist-rsp/>
            </utopia-rsp>
        </expect>
    </test>

    <test id="trip-get-req">
        <send id="client1">
            <utopia-req>
                <trip-get-req id="14"/>
            </utopia-req>
        </send>

        <expect id="client1">
            <utopia-rsp>
                <trip-get-rsp/>
            </utopia-rsp>
        </expect>
    </test>

    <test id="logout">
        <send id="client1">
            <logout-req/>
        </send>

        <expect id="client1">
            <logout-rsp/>
        </expect>
    </test>

</testset>

