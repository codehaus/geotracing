<?xml version="1.0" encoding="iso-8859-1"?>

<table>

    <views>

		<insert>
			<field name="name" />
			<field name="description" />
			<field name="point" />
            <field name="extra" />
        </insert>

		<list>
			<field name="id" />
			<field name="name" />
			<field name="description" />
			<field name="point" />
            <field name="extra" />
          </list>

		<query>
			<field name="id" />
			<field name="name" />
			<field name="description" />
			<field name="point" />
            <field name="extra" />
   		</query>
 	</views>

	<data>
		<field name="id" type="INTEGER" required="true" key="true" />
		<field name="name" type="STRING" size="64" required="false" />
		<field name="description" type="TEXT" required="false" />
        <field name="creationdate" type="TIMESTAMP"/>
		<field name="modificationdate" type="TIMESTAMP"/>
		<field name="extra" type="XML" required="false"/>
        <!-- spec="<TYPE>,<DIMENSION>,<SRID>,[INDEX_GIST]" -->
        <field name="point" type="OBJECT" class="org.postgis.PGgeometryLW" spec="POINT,2,28992,INDEX_GIST"/>
    </data>
</table>