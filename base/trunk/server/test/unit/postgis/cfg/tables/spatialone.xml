<?xml version="1.0" encoding="iso-8859-1"?>

<table>

    <views>

		<insert>
			<field name="point" />
 			<field name="name" />
		</insert>

		<list>
			<field name="id" />
			<field name="point" />
			<field name="name" />
   		</list>

		<query>
			<field name="id" />
			<field name="name" />
			<field name="point" />
  		</query>
 	</views>

	<data>
		<field name="id" type="INTEGER" required="true" key="true" />
		<field name="name" type="STRING" size="64" required="false" />
		<field name="creationdate" type="TIMESTAMP"/>
		<field name="modificationdate" type="TIMESTAMP"/>
		<field name="point" type="OBJECT" class="org.postgis.PGgeometryLW" spec="POINT,2"/>
	</data>
</table>
