<?xml version="1.0" encoding="utf-8"?>

<table>

    <views>

		<insert>
			<field name="firstname" />
            <field name="lastname" />
            <field name="birthdate" />
            <field name="street" />
            <field name="streetnr" />
            <field name="zipcode" />
            <field name="city" />
            <field name="country" />
            <field name="phonenr" />
            <field name="mobilenr" />
            <field name="email"  />
            <field name="extra" />
		</insert>

		<list>
			<field name="id" />
			<field name="owner" />
			<field name="firstname" />
            <field name="lastname" />
   		</list>

		<query>
			<field name="id" />
			<field name="owner" />
			<field name="firstname" />
            <field name="lastname" />
            <field name="birthdate" />
            <field name="street" />
            <field name="streetnr" />
            <field name="zipcode" />
            <field name="city" />
            <field name="country" />
            <field name="phonenr" />
            <field name="mobilenr" />
            <field name="email"  />
            <field name="creationdate" />
            <field name="modificationdate" />
            <field name="extra" />
		</query>
 	</views>

	<data>
		<field name="id" type="INTEGER" required="true" key="true" />
		<field name="owner" type="STRING" size="12" required="true" default="unknown" />
		<field name="firstname" type="STRING" size="64" required="true" />
		<field name="lastname" type="STRING" size="64" required="true" />
		<field name="birthdate" type="TIMESTAMP" />
		<field name="street" type="STRING" size="64" />
		<field name="streetnr" type="STRING" size="6" />
		<field name="zipcode" type="STRING" size="10" />
		<field name="city" type="STRING" size="32" />
		<field name="country" type="STRING"	size="32" />
		<field name="phonenr" type="STRING"  size="32"  />
		<field name="mobilenr" type="STRING" size="32" />
		<field name="email" type="STRING" size="128" />
		<field name="creationdate" type="TIMESTAMP"/>
        <field name="modificationdate" type="TIMESTAMP"/>
		<field name="extra" type="XML" />
	</data>
</table>