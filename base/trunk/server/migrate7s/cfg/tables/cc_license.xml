<?xml version="1.0" encoding="utf-8"?>

<table>

    <views>
        <insert>
            <field name="uri"/>
            <field name="description"/>
            <field name="type"/>
        </insert>

        <list>
            <field name="id"/>
            <field name="uri"/>
            <field name="description"/>
            <field name="type"/>
        </list>

        <query>
            <field name="id"/>
            <field name="uri"/>
            <field name="description"/>
            <field name="type"/>
        </query>
    </views>

    <data>
        <field name="id" type="INTEGER" required="true" key="true"/>
        <field name="uri" type="STRING" size="1024" required="true"/>
        <field name="description" type="STRING" size="1024" required="false"/>
        <field name="type" type="STRING" size="32" required="false"/>
    </data>

</table>
