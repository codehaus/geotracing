		<field name="state" type="INTEGER" default="1" required="false" />
		<field name="creationdate" type="TIMESTAMP"/>
		<field name="modificationdate" type="TIMESTAMP"/>
		<field name="extra" type="XML" required="false"/>
	</data>
</table>
